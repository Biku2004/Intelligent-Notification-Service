generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. User Model
model User {
  id              String   @id @default(uuid())
  email           String   @unique
  name            String?
  createdAt       DateTime @default(now())
  
  // Relations
  preferences     NotificationPreference?
}

// 2. The "Bell Icon" & Settings Logic
model NotificationPreference {
  id              String  @id @default(uuid())
  userId          String  @unique
  user            User    @relation(fields: [userId], references: [id])
  
  // Channels
  emailEnabled    Boolean @default(true)
  smsEnabled      Boolean @default(false)
  pushEnabled     Boolean @default(true)
  
  // Specific Toggles (Arpit's Logic)
  marketing       Boolean @default(false) // Marketing emails
  activity        Boolean @default(true)  // "Someone liked your post"
  
  // Do Not Disturb (DND)
  dndEnabled      Boolean @default(false)
  dndStartTime    String? // e.g., "22:00"
  dndEndTime      String? // e.g., "08:00"
}