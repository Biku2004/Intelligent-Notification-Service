generator client {
  provider = "prisma-client-js"
  // You can remove "engineType = binary" unless you specifically need it for Docker, 
  // but it's fine to leave it.
  engineType = "binary" 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // <--- ADD THIS LINE BACK
}

// ... Keep your User and NotificationPreference models exactly as they are ...
model User {
  id              String   @id @default(uuid())
  email           String   @unique
  name            String?
  createdAt       DateTime @default(now())
  preferences     NotificationPreference?
}

model NotificationPreference {
  id              String  @id @default(uuid())
  userId          String  @unique
  user            User    @relation(fields: [userId], references: [id])
  emailEnabled    Boolean @default(true)
  smsEnabled      Boolean @default(false)
  pushEnabled     Boolean @default(true)
  marketing       Boolean @default(false)
  activity        Boolean @default(true)
  dndEnabled      Boolean @default(false)
  dndStartTime    String?
  dndEndTime      String?
}