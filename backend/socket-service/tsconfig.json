{
  "compilerOptions": {
    "target": "ES2020", /* Modern JS output */
    "module": "commonjs", /* Standard Node.js modules */
    "outDir": "./dist", /* Where JS files will be built */
    "strict": true, /* Enable strict type checking */
    "esModuleInterop": true, /* Allow importing CommonJS modules cleanly */
    "skipLibCheck": true, /* Skip checking node_modules types */
    "forceConsistentCasingInFileNames": true /* Prevent file casing issues */
  },
  "include": [
    "src/**/*",
    "../../shared/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}